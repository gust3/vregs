<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" client="site" method="upgrade">
        <name>vm2_search</name>
        <author>Linelab.org</author>
        <creationDate>January 2012</creationDate>
        <copyright>Copyright (C) 2012 Linelab.org. All rights reserved.</copyright>
        <license>Commercial Licence</license>
        <authorEmail>info@linelab.org</authorEmail>
        <authorUrl>www.linelab.org</authorUrl>
        <version>1.4</version>
        <description>MOD_VM2_SEARCH_XML_DESCRIPTION</description>
        <files>
                <filename module="mod_vm2_search">mod_vm2_search.php</filename>
                <filename>helper.php</filename>
                <folder>tmpl</folder>
                <folder>assets</folder>
                <folder>fields</folder>
        </files>
        <languages folder="languages">
                <language tag="en-GB">en-GB.mod_vm2_search.ini</language>
        </languages>
        <config>
        	<fields name="params">
        		<fieldset name="basic" addfieldpath="/modules/mod_vm2_search/fields/">
        			<field name="price_from" type="text" default="100" label="MOD_VM2_SEARCH_PRICE_FROM"/>
        			<field name="price_to" type="text" default="1000" label="MOD_VM2_SEARCH_PRICE_TO" />
        			<field name="price_step" type="text" default="100" label="MOD_VM2_PRICE_STEP" />
        			<field type="radio" name="show_manufacturers" default="1" label="MOD_VM2_SHOW_MANUFACTURERS" >
        				<option value="0">JNO</option>
        				<option value="1">JYES</option>
        			</field>
        			<field type="radio" name="show_cart_fields" default="1" label="MOD_VM2_SHOW_CART_FIELDS">
        				<option value="0">JNO</option>
        				<option value="1">JYES</option>
        			</field>
        			<field type="radio" name="show_custom_fields" default="1" label="MOD_VM2_SHOW_CUSTOM_FIELDS">
        				<option value="0">JNO</option>
        				<option value="1">JYES</option>
        			</field>
        			<field type="customfields" name="customfields" label="MOD_VM2_CUSTOMFIELDS"/>
        		</fieldset>
        	</fields>
        </config>
</extension>
